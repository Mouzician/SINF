                                    <li><a href="/Home/Categoria/TABLETS">Tablets</a></li>
                                    <li><a href="/Home/Categoria/PERIFERICO">Periféricos</a></li>
                                    <li><a href="/Home/Categoria/ACESSORIO">Armazenamento</a></li>
                                </ul>
                            </li>
                            <li class="dropdown1">
                                <a href="#">Imagem e Som</a>
                                <ul class="dropdown2">
                                    <li><a href="/Home/Categoria/TV">Televisores</a></li>
                                    <li><a href="/Home/Categoria/AUDIO">Audio</a></li>
                                    <li><a href="/Home/Categoria/FOTOVIDEO">Video</a></li>
                                </ul>
                            </li>
                            </li>
                            <li class="dropdown1">
                                <a href="#">Comunicação</a>
                                <ul class="dropdown2">
                                    <li><a href="/Home/Categoria/TELEMOVEL">Telemóveis</a></li>
                                    <li><a href="/Home/Categoria/GPS">GPS</a></li>
                                </ul>
                            </li>
                            <li><a href="/Home/Contacto">Contacte-nos</a></li>
                            <div class="clearfix"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="footer">
        <div class="up-arrow">
            <a class="scroll" href="#home"><img src="" alt="" /></a>
        </div>
        <div class="container">
            <div class="copyrights">
                <p>Primavera © 2015 All rights reserved</p>
            </div>
            <div class="footer-social-icons">
                <a href="#"><i class="fb"></i></a>
