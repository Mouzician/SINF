                            </form>

                        </div>
                    </div>
                </div>
                <!-- search-scripts -->
                <script src="~/Content/site/js/classie.js"></script>
                <script src="~/Content/site/js/uisearch.js"></script>
                <script>
                    new UISearch(document.getElementById('sb-search'));
                </script>

                <div class="header-top-right">

                    <!-- start search-->
                  
                    <!-- //search-scripts -->

                    <a href="/Home/Carrinho"><i class="cart"></i></a>
                    <a href="/Home/Wishlist"><i class="cart" style="background: url('/Content/site/images/document.png');"></i></a>
                    <a href="/Home/Encomendas"><i class="cart" style="background: url('/Content/site/images/document.png');"></i></a>           
                </div>
                <div class="navigation">
