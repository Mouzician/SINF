<!DOCTYPE html>
<html>
    <body>
    <!-- start Dresses-page -->
    <!-- content-section-starts -->
    <div class="container">
        <div class="dreamcrub">
            <ul class="breadcrumbs">

                <li class="home">
                    <a href="/Home" title="Pagina Inicial"><img src="~/Content/site/images/home.png" alt="" /></a>&nbsp;
                    <span>&gt;</span>
                </li>
                <li>
                    Home
                    <span>&gt;</span>
                </li>
                <li>
                    <span class="red">&nbsp;Artigos&nbsp;</span>
                </li>
            </ul>
            <ul class="previous">
                <li><a href="/Home">Página Inicial</a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="container">
        <div class="ft-ball">
            <div class="cont span_2_of_3">
                <div class="mens-toolbar">
                    <div class="sort">
                        <div class="sort-by">
                            <form id="myform" method="post" action="/Home/POST/Filtro">
                                <input name="categoria" type="hidden" value="@ViewBag.cat" hidden>
                                <select name="filtro" onchange="change()">
                                    <option disabled selected> -- Ordenar por Preço -- </option>
                                    <option value="caro">Preço: mais caro</option>
                                    <option value="barato">Preço: mais barato</option>
                                </select>
                            </form>
                            <script>
									function change(){
	    								document.getElementById("myform").submit();
									}
                            </script>
                            <br />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>




                @foreach (var artigo in ViewBag.artigos)
                {

                    <div class="box1">
                        <div class="col_1_of_single1 span_1_of_single1" style='height:310px'>

                            <div class="view1 view-fifth1">
                                <div class="top_box">

                                    <h3 class="m_1">@artigo.Nome</h3>
                                    <!--<p class="m_2">{$cat.nome}</p>-->
                                    <a href="/Home/Artigos/@artigo.ID">
                                        <div class="grid_img">
                                            <div class="css3"><img src="~/Content/site/images/products/@artigo.CDU_Imagem" /></div>
                                            <div class="mask1">
                                                <div class="info">Ver Produto</div>
                                            </div>

                                        </div>
                                        <br>
                                        <div class="price">@artigo.Preço€</div>
                                    </a>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                }

                <div class="clearfix"></div>
            </div>

            <div class="rsidebar span_1_of_left">
                <section class="sky-form">

                    <h4>Intervalo de Preço</h4>

                    <div class="row row1 scroll-pane">
                        <form class="form-inline" role="form" action="/Home/POST/Filtro2" method="post">
                            <div class="col col-4">
                                <input name="categoria" type="hidden" value="@ViewBag.cat" hidden>
                                <label for=fader>Preço Máximo</label>
                                <input type=range name=priceMaximum min=0 max=2000 value=2000 id=fader step=1 oninput="outputUpdateMax(value)">
                                <output for=fader id=pmax>2000</output>
                                <label for=fader>Preço Mínimo</label>
                                <input type=range name=priceMinimun min=0 max=2000 value=0 id=fader step=1 oninput="outputUpdateMin(value)">
                                <output for=fader id=pmin>0</output>
                                
                                <div class="form-group">
                                    <input id="submit" type="submit" value="Confirmar" class="btn btn-default">
                                </div>
                                <script>
                                    function outputUpdateMin(pmin) {
                                        document.querySelector('#pmin').value = pmin;
                                    }
                                </script>
                                <script>
                                    function outputUpdateMax(pmax) {
                                        document.querySelector('#pmax').value = pmax;
                                    }
                                </script>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
            <div class="clearfix"></div>
            <!-- content-section-ends -->
        </div>
    </div>
</body>
</html>